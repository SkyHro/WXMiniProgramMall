/* Pages/cart/childCops/my-cart-list/my-cart-list.wxss */
page {
  height: 100%;
}
.scroll-view {
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.cartList {
  border-bottom: 4rpx solid #eee;
  position: relative;
  padding: 20rpx 0 30rpx;
  overflow: hidden;
}
.cartList:nth-last-of-type(1) {
  border: none;
}
.cartList .img {
  width: 200rpx;
  border-radius: 10rpx;
  margin-left: 100rpx;
  float: left;
}
.cartList .des {
  margin-left: 320rpx;
}
.cartList .title,
.cartList .detail{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 20rpx 20rpx 0 0;
}
.cartList .title {
  font-size: 34rpx;
  font-weight: 700;
}
.cartList .detail {
  font-size: 28rpx;
  color: #aaa;
}
.data {
  margin-top: 80rpx;
}
.data .price {
  color: #ff5777;
  font-size: 34rpx;
}
.data .number {
  float: right;
  margin-right: 10rpx;
}