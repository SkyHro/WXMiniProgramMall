/* Pages/category/childCops/my-category/my-category.wxss */
page {
  height: 100%;
}
.category {
  width: 30%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
  display: inline-block;
}
.category-item {
  line-height: 90rpx;
  box-sizing: border-box;
}
.active {
  background: #fff;
  border-left: 5rpx solid #ff5777;
  /* 用来抵消掉由于设置了border产生的文字晃动 */
  padding-right: 5rpx;
  color: #ff5777;
}